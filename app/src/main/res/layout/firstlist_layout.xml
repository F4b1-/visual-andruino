<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/pinNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:hint="Pin Number"
            android:inputType="text" />

        <TextView
            android:id="@+id/resultView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/analogReadButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:text="readResult" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



            <Button
                android:id="@+id/analogReadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="analogRead 41" />



            <Button
                android:id="@+id/digitalHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:text="digitalWrite->HIGH" />

            <Button
                android:id="@+id/digitalLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/digitalHigh"
                android:layout_alignEnd="@+id/digitalHigh"
                android:layout_alignRight="@+id/digitalHigh"
                android:layout_marginBottom="13dp"
                android:text="digitalWrite->LOW" />



        </LinearLayout>


        <it.unibz.mobile.visualandruino.MySwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <!-- Need to wrap DragListView in another layout for
                wrap_content to work for some reason -->
            <com.woxthebox.draglistview.DragListView
                android:id="@+id/drag_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




        </it.unibz.mobile.visualandruino.MySwipeRefreshLayout>


    </LinearLayout>


</FrameLayout>
